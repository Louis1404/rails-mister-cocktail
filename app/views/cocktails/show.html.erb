<%= render 'layouts/navbar' %>

<div class="container">
  <h2><%= @cocktail.name %></h2>

  <% @cocktail.doses.each do |d| %>
    <ul>
      <li><%= "Description: #{d.description}" %></li>
      <li><%= "Ingredient : #{d.ingredient.name}" %></li>
      <li><%= link_to "Delete a dose",
              dose_path(d),
              class: "glyphicon glyphicon-trash",
              method: :delete,
              data: { confirm: "Are you sure?" } %></li>
    </ul>
    <br>
  <% end %>

  <%= link_to "Back to list", cocktails_path, class: "btn btn-success" %>
  <%= link_to "Add a dose", new_cocktail_dose_path(params[:id]), class: "btn btn-success" %>
  </div>
</div>

<%= render 'layouts/footer' %>
